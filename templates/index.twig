

{% include 'components/html_head.twig' with {'css': 'home'} %}
{% include 'components/navbar.twig' %}

<body>
<main id="swup" class="__home__">
<section class="head dark grid">
    {% set entryQuery = craft.entries().section('article').with(['heroImage']).orderBy('random()').limit(1) %}
    {% set entry = entryQuery.one() %}
    <a href="{{entry.url}}" class="recent_post">
        <div class="title_block">
            <div class="title_content">
                <h1 class="slide_transition hover_color">
                  {{- entry.title -}}
                </h1>
                {%- if entry.place != "NA" -%}
                    <div class="caption slide_transition" data-delay="700ms">
                        {{- entry.place -}}
                    </div>
                {%- endif -%}
                <div class="description fade_transition" data-delay="1.2s">
                  <p>{{- entry.description -}}</p>
                </div>
            </div>

        </div>
        <div href="{{entry.url}}" class="image_block vertical fade_in">
            <img src="{{ get_image_from_media(entry.heroImage, 760, 1000) }}"/>
        </div>
        <div class="image_block horizontal slide_transition hover_border"
             data-delay="1.25s"
             style="background-image: url({{ get_image_from_media(entry.heroImage, 0, 700) }})">
        </div>
    </a>
</section>

<section class="stories light grid storylist">
    <header class="caption">
        Stories
    </header>

    <!--div class="story_grid">
        <div class="story_block featured">
            A
        </div>
        <div class="story_block">
            B
        </div>
        <div class="story_block">
            C
        </div>
    </div-->


    {%- set main_story =  craft.Entries.section('story').with(['storyImage']).orderBy('postDate desc').limit(1).one() -%}
    <a href="{{ main_story.url }}" class="featured_story">
        <div class="title">
            <h1 class='md-only slide_transition hover_underline'  data-delay="1.75s">{{- main_story -}}</h1>
            <h2 class='tight sm-only slide_transition'  data-delay="1.75s">{{- main_story -}}</h2>
            <p class=" fade_transition"  data-delay="2s"> {{ main_story.storyDescription }}</p>
            <div class="metadata caption fade_transition"  data-delay="2s">
                {% if main_story.storyLocation %}{{- main_story.storyLocation -}}&nbsp;-&nbsp;{% endif %}
                {{- main_story.chapterList | length -}}&nbsp;{{- main_story.chapterList | length == 1 ? 'Chapter' : 'Chapters' -}}
            </div>
        </div>
        <div class="image slide_transition hover_border"  data-delay="2s" style="background-image: url({{ get_image_from_media(main_story.storyImage, 875, 550) }})"></div>

    </a>

    <div class="more_stories">
        {%- set stories =  craft.Entries.section('story').with(['storyImage']).orderBy('postDate desc').limit(2).offset(1).all() -%}
        {%- for story in stories -%}
            <a href="{{ story.url }}" class="story_block">
                <div class="image slide_transition hover_border"  data-delay="2.5s" style="background-image: url({{ get_image_from_media(story.storyImage, 700, 550) }})"></div>
                <h2 class="tight hover_underline">{{ story }}</h2>
                <div class="metadata caption">
                    {% if story.storyLocation %}{{- story.storyLocation -}}&nbsp;-&nbsp;{% endif %}
                    {{- story.chapterList | length -}}&nbsp;{{- story.chapterList | length == 1 ? 'Chapter' : 'Chapters' -}}
                </div>
            </a>
        {%- endfor -%}

    </div>
    <div class="read_more_stories">
        <a class="primary_button" href="/stories">More Stories</a>
    </div>

</section>

<section class="posts dark grid">
    <header class="caption">
        Recent Posts
    </header>

    <div class="heading" style="display: none;">
        <h1>Articles</h1>
    </div>
    <div class="wide" style="display: none;">
        <p class="trail_log_intro">
            Connect with nature, get some fresh air, find yourself, and have fun. Take the extra step
            (or 10,000) and join us on one of the thousands of backcountry trails the country has to offer!
        </p>
    </div>

    {%- set entryQuery = craft.entries().section('article').with(['heroImage']).orderBy('postDate desc').limit(9) -%}
    {%- set entries = entryQuery.all() -%}

    <div class="recent_articles sm">
        {%- for entry in entries -%}
            <a href="{{entry.url}}" class="article">
                <div class="article_image hover_border_tight" style="background-image: url({{ get_image_from_media(entry.heroImage, 800, 450) }})"></div>
                <div class="metadata">
                    {% if entry.place %}<div class="location">{{ entry.place }}</div>{% endif %}
                    <div class="title hover_color">{{entry.title}}</div>
                </div>
            </a>
        {%- endfor -%}
    </div>

    <div class="recent_articles md">
        {%- for entry in entries -%}
            <a href="{{entry.url}}" class="article" style="text-decoration: none;">
                <div class="article_image hover_border" style="background-image: url({{ get_image_from_media(entry.heroImage, 800, 450) }})"></div>
                <h3 class="tighter hover_color">{{entry.title}}</h3>
                {% if entry.place %}<div class="caption">{{ entry.place }}</div>{% endif %}
            </a>
        {%- endfor -%}

    </div>

    <div class="read_more_stories">
        <a href="/articles" class="primary_button">More Posts</a>
    </div>


</section>



{% include 'components/share.twig' %}
{% include 'components/footer.twig' %}
</main>
</body>