<head>
    <title>{{entry.title}}</title>
    <link href="https://fonts.googleapis.com/css?family=Cabin:400,400i,500,700,700i|Lekton:400,400i,700" rel="stylesheet">
    <link rel="stylesheet" href="/css/story.css">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#fc9300">
    <meta name="apple-mobile-web-app-title" content="Switchbacks">
    <meta name="application-name" content="Switchbacks">
    <meta name="msapplication-TileColor" content="#2b5797">
    <meta name="theme-color" content="#000000">

    {% if entry.chapterList[0].heroImage | length > 0 %}
        {% set hero_path = ( entry.chapterList[0].heroImage[0].folderPath ~ entry.chapterList[0].heroImage[0].filename ) %}
        <style>
            body {
                background-color: black;
                background-attachment: fixed;
                background-size: cover;
                background-position: center;
                background-image: url({{"https://dv38fo0xkn5dz.cloudfront.net/fit-in/900x0/media/"~ hero_path }});
            }
            @media screen and (min-width: 1920px) {
                body {
                    background-image: url({{"https://dv38fo0xkn5dz.cloudfront.net/fit-in/1920x0/media/"~ hero_path }})
                }

            }
            @media screen and (min-width: 1440px) {
                body {
                    background-image: url({{"https://dv38fo0xkn5dz.cloudfront.net/fit-in/1440x0/media/"~ hero_path }})
                }

            }
            @media screen and (min-width: 2560px) {
                body {
                    background-image: url({{"https://dv38fo0xkn5dz.cloudfront.net/fit-in/2560x0/media/"~ hero_path }})
                }

            }
            @media screen and (min-width: 3840px) {
                body {
                    background-image: url({{"https://dv38fo0xkn5dz.cloudfront.net/fit-in/3840x0/media/"~ hero_path }})
                }

            }
        </style>
    {% endif %}
</head>


{% include 'components/navbar.twig' %}

<section class="main">

    <div class="content">
        <h1>{{ entry }}</h1>
        <div class="description">
            {{ entry.storyDescription }}
        </div>

        <div class="metadata">
            {{ entry.storyDates }} - {{ entry.storyLocation }} - {{ entry.chapterList | length }} {{ entry.chapterList | length == 1 ? 'Chapter' : 'Chapters' }}
        </div>

        <hr>

        <div class="articleList">

            {% for article in entry.chapterList.all() %}
                <div class="article">
                    <div class="articleData">
                        <div class="articleTitle">
                            {{ article }}
                        </div>
                        <div class="articleLocation">
                            {{ article.place }}
                        </div>
                        <div class="readMore">
                            <a href="{{ article.url }}">Read More</a>
                        </div>
                    </div>
                    {% set image_path = (article.heroImage[0].folderPath ~article.heroImage[0].filename ) %}
                    {% set image_url = ("https://dv38fo0xkn5dz.cloudfront.net/200x100/media/"~ image_path) %}


                    <div class="articleImage" style="background-image:url({{ image_url }});"></div>
                </div>
            {% endfor %}


        </div>
    </div>




    <div class="heroImage"></div>
</section>
</div>