<header class="navbar dark grid">
    <a href="/" id="brand" role="link"></a>
    {#
       {{ craft.app.requestedParams[0] }}
    #}

    <button class="menu_toggle" id="menu_button" type="button">
        <span class="sr-only">Toggle main menu</span>
        <span class="elements" aria-hidden="true"></span>
    </button>
    <nav id="mobile_menu">
        <ul>
            <li>
                <a href="/stories">Stories</a></li>
            <li><a href="/articles">Trail Log</a></li>
            <!--li><a href="#">Guidebook</a></li-->
            <li><a href="/team">Team</a></li>
            <li><a href="#" class="solid">Contact</a></li>
        </ul>
    </nav>
    <nav id="top_menu" role="navigation">
        <ul class="links">
            <li><a href="/stories" {% if craft.app.requestedParams[0] in ['stories', 'stories/story.twig'] %} class="active" {% endif %}>
                Stories
            </a></li>
            <li><a href="/articles" {% if craft.app.requestedParams[0] in  ['articles', 'articles/article.twig'] %} class="active" {% endif %}>
                Trail Log
            </a></li>
            <!--li><a href="#">
                Guidebook
                </a></li-->
            <li><a href="/team" {% if craft.app.requestedParams[0] in  ['team', 'articles/team.twig'] %} class="active" {% endif %}>
                Team
            </a></li>
            <li><a href="#" class="solid">
                Contact
            </a></li>
        </ul>
    </nav>
    <script>
        function toggle_menu(){
            window.scrollTo({
                top: 0,
                left: 0,
                behavior: 'smooth'
            });
            document.getElementById('mobile_menu').classList.toggle('menu_open');
            document.getElementById('menu_button').classList.toggle('menu_open');
        }
        document.getElementById('menu_button').addEventListener('click', toggle_menu);
    </script>
</header>